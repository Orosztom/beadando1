{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Összes tennivaló</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Kinek a feladata</th>
            <th>Leírás</th>
            <th> </th>
            <th> </th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{assignedTo}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td><a href="/todos/edit/{{id}}" class="btn btn-default btn-sm">Tennivaló szerkesztése</a></td>
            <td><a href="/todos/delete/{{id}}" class="btn btn-danger btn-sm">Tennivaló törlése</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-default">Új tennivaló felvétele</a></p>