<div class="page-header">
    <h1>Tennivaló szerkesztése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.helysin}}
                has-error
            {{/if}}
        ">
            <label for=assignedTo" class="col-lg-2 control-label">Kinek szánja a feladatot:</label>
            <div class="col-lg-10">
                <input class="form-control" id="assignedTo" name="assignedTo" placeholder="pl. Tomi, Sanyi stb..." type="text" value="{{todo.assignedTo}}">
                {{#if validationErrors.helyszin}}
                    <span class="help-block">{{validationErrors.helyszin.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras" placeholder="blabla">{{todo.description}}</textarea>
                <span class="help-block">Add meg a tennivaó leírását!</span>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>        